---
import { Image } from "@astrojs/image/components";
import avatar from "~/images/avatar.jpg";
import { GitHubIcon, MoonIcon, SunIcon } from "./Icons";
import { MobileNavigation } from "./MobileNavigation";
import NavItem from "./NavLink.astro";
---

<header class="sticky top-0 z-40 bg-white dark:bg-black">
  <div class="mx-auto max-w-6xl h-20 p-5 md:px-10 flex items-center justify-between text-zinc-800 dark:text-zinc-100">
    <a href="/">
      <Image
        src={avatar}
        alt="Victor Ndaba"
        class="h-10 w-10 rounded-full ring-1 ring-zinc-900/5 backdrop-blur dark:bg-zinc-800/90 dark:ring-white/20 cursor-pointer hover:ring-4 transition-all"
        formats={["avif", "webp"]}
      />
    </a>
    <div
      class="hidden md:flex items-center p-2 rounded-full px-3 text-zinc-800 ring-zinc-900/5 backdrop-blur dark:text-zinc-200 text-lg"
    >
      <NavItem href="/about">About</NavItem>
      <NavItem href="/blog">Blog</NavItem>
      <NavItem href="/projects">Projects</NavItem>
      <NavItem href="/uses">Uses</NavItem>
    </div>
    <div class="flex items-center space-x-8">
      <MobileNavigation client:visible className="pointer-events-auto md:hidden" />
      <a href="https://github.com/ndaba1" class="cursor-pointer hidden md:block" target="_blank">
        <GitHubIcon className="w-11 h-11 fill-black dark:fill-white" />
      </a>
      <button
        type="button"
        data-aw-toggle-color-scheme
        class="ring-2 ring-zinc-200 hover:ring-4 cursor-pointer dark:ring-white/20 rounded-xl p-2 relative"
      >
        <SunIcon className="hidden dark:block w-6 h-6 stroke-black fill-white dark:stroke-white dark:fill-black" />
        <MoonIcon className="dark:hidden w-6 h-6 stroke-black fill-white dark:stroke-white dark:fill-black" />
      </button>
    </div>
  </div>
</header>
