---
import { getImage } from "@astrojs/image";
import { AstroSeo } from "@astrolib/seo";

import defaultImageSrc from "~/assets/images/default.png";

const { src: defaultImage } = await getImage({
  src: defaultImageSrc,
  width: 1200,
  height: 628,
});

const {
  title = "Victor Ndaba | Software developer, founder, 3D Animator, Physics researcher.",
  description = "Welcome to the personal portfolio website and blog of Victor Ndaba. I write about software development, CG and 3D, Machine learning and other general tech-related topics.",
  image = defaultImage,

  canonical,
  noindex = false,
  nofollow = false,

  ogTitle = title,
  ogType = "website",
} = Astro.props;

